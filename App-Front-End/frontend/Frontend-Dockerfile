# ---- Build Stage ----
FROM node:20-alpine AS build

WORKDIR /app

# Copy dependency declarations first for better Docker cache usage
COPY package.json package-lock.json* yarn.lock* ./
RUN npm install

# Copy rest of the code and build your app
COPY . .
RUN npm run build

# ---- Production Stage ----
FROM nginx:alpine

# Copy built static files from build stage to Nginx public dir
COPY --from=build /app/build /usr/share/nginx/html

# Copy nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

